{
  "devDependencies": {
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.1"
  },
  "scripts": {
    "prepare": "husky install && husky set .husky/prepare-commit-msg 'exec < /dev/tty && ./node_modules/.bin/cz --hook || true'"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
